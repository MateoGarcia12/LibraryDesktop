<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LibraryDesktop.LogInWindow"
        Title="LogInWindow">
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" Text="Username:"/>
                <TextBox  x:Name="UsernameTextBox" Margin="10"/>
                <TextBlock HorizontalAlignment="Center" Text="Password:" Margin="10"/>
                <TextBox Classes="revealPasswordButton"  Width="200" VerticalAlignment="Center" x:Name="PasswordBox" PasswordChar="."  Margin="10"/>
                <Button Background="SeaGreen" Foreground="White" HorizontalAlignment="Center" Content="Login" Click="Login_Click" Margin="10"/>
        </StackPanel>
    
</Window>